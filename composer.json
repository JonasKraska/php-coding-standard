{
    "name": "kraska/coding-standard",
    "type": "library",
    "description": "Unified standards for code/project quality assurance.",
    "version": "0.1.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Jonas Kraska",
            "email": "jonas.kraska@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.15",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "php:fix": [
            "composer normalize",
            "php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose"
        ],
        "php:lint": [
            "composer normalize --dry-run --diff",
            "php vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --dry-run --diff"
        ]
    }
}
